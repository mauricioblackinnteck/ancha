<% if user_signed_in? %>
	<%= form_for Picture.new do |f| %>
	  <%= f.hidden_field :picturable_type, value: picturable_type %>
	  <%= f.hidden_field :picturable_id, value: picturable_id %>
	  <%= f.file_field :image %>
	  <%= f.submit "Save Picture" , :class => 'btn btn-success'%>
	<% end %>
<% end %>

<div id="pictures_section" class="row">
  <% pictures.each do |picture| %>
    <%= render 'picture_detail', picture: picture %>

  <% end %>
</div>
