<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @game.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @game.description %>
</p>

<p>
  <strong>Url:</strong>
  <%= @game.url %>
</p>

<p>
  <strong>Image:</strong>
  <% if @game.pictures.any? %>
    <%= image_tag @game.pictures.first.image.url %>
  <% else %>
    <img alt="100%x200" data-src="holder.js/100%x200" style="height: 200px; width: 100%; display: block;" src="data:image/svg+xml;base64," data-holder-rendered="true">
  <% end %>

</p>

<%= link_to 'Back', games_path %>
